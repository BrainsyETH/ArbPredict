# Polymarket Credentials
POLYMARKET_API_KEY=your-api-key
POLYMARKET_PRIVATE_KEY=your-wallet-private-key
POLYMARKET_RPC_URL=https://polygon-rpc.com

# Kalshi Credentials (RSA API key authentication)
# Generate at: https://kalshi.com/account/profile -> API Keys section
KALSHI_API_KEY_ID=your-api-key-id
# Private key - paste the full PEM or use \n for newlines
# Example: -----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----
KALSHI_PRIVATE_KEY=

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arb_bot
DB_USER=postgres
DB_PASSWORD=your-db-password

# Trading Mode (dry_run or live)
TRADING_MODE=dry_run

# Telegram Alerts (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=info
